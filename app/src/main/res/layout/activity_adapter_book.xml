<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark"
    tools:context=".Adapter_Book"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/lninfbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shadow"
        android:padding="2dp"
        android:elevation="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@android:color/white">
        <ImageView
            android:id="@+id/imgvbook"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/blockchain"
            android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tvnamebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sau Cành Violet"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tvauthorbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả: Ngô Tất Thắng"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/tvcategorybook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Thể loại: Văn học Việt Nam"
                android:textColor="@color/lightgray"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

            <ImageView
                android:id="@+id/imgfollowbook"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:src="@drawable/bookmark_regular"
                app:tint="#8988FF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>